<div class="container">
  <div class="row">
    <h1 class="header mx-auto"> <%= @cocktail.name %></h1>
  </div>

  <h2 class="text-center">Doses</h2>

  <div class="row">
    <% @cocktail.doses.each do |d| %>
    <div class="col-6">
      <div class="card">
        <img src="https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" class="card-img-top" alt="Cocktail image">
        <div class="card-body">
          <ul class="list-group">
            <li class="list-group-item"> <%= d.description %> </li>
            <li class="list-group-item"> <%= d.ingredient.name %> </li>
            <li class="list-group-item"> <%= link_to "Delete dose", dose_path(d.id), method: :delete %>  </li>
          </ul>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <h2 class="formheader text-center">Add a new Dose</h2>

  <div class="row">
    <div class="col-12 mx-auto">
      <%= simple_form_for([@cocktail, @dose]) do |d| %>
      <%= d.association :ingredient %>
      <%= d.input :description %>
      <%= d.submit "Add a Dose", class:"btn btn-primary", id:"newdosebtn" %>
      <% end %>
    </div>
  </div>

    <div class="row">
      <%= link_to "See all Cocktails", cocktails_path, class:"btn btn-primary mx-auto", id:"seecbtn" %>
  </div>
</div>




